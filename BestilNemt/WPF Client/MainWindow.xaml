<Window x:Class="WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1376">
    <Grid>
        <TabControl x:Name="MainTabs" HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="1280">
            <TabItem Header="Kæder">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="Label" Content="Label" HorizontalAlignment="Left" Margin="21,25,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="Button" Content="Button" HorizontalAlignment="Left" Margin="123,65,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Produkter">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Kurv">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Admin">
                <Grid Background="#FFE5E5E5" Margin="0,0,-1,-2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" MinWidth="208"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TabControl x:Name="AdminTabControl" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="658" VerticalAlignment="Top" Width="1265" Margin="0,26,0,0">
                        <TabItem Header="Produkter">
                            <Grid Background="#FFE5E5E5" Margin="0,-39,0,39">
                                <TextBox x:Name="ProductName" HorizontalAlignment="Left" Height="23" Margin="8,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>
                                <TextBox x:Name="ProductPrice" HorizontalAlignment="Left" Height="23" Margin="10,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188"/>
                                <TextBox x:Name="ProductDescription" HorizontalAlignment="Left" Height="23" Margin="10,174,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188"/>
                                <TextBox x:Name="ProductCategory" HorizontalAlignment="Left" Height="23" Margin="10,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188"/>
                                <TextBox x:Name="ProductImgPath" HorizontalAlignment="Left" Height="23" Margin="10,283,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188"/>
                                <Button x:Name="CreateProduct" Content="Opret" HorizontalAlignment="Left" Margin="10,324,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="-0.003,0.461" Height="20" Click="button1_Click"/>
                                <Label x:Name="ProductNameLabel" Content="Navn" HorizontalAlignment="Left" Margin="8,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.179,-0.547" Height="26" Width="38"/>
                                <Label x:Name="ProductPriceLabel" Content="Pris" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.842,0.462"/>
                                <Label x:Name="ProductDesLabel" Content="Beskrivelse" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="ProductCategoryLabel" Content="Kategori" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="ProductImgPathLabel" Content="Billede sti" HorizontalAlignment="Left" Margin="10,252,0,0" VerticalAlignment="Top"/>
                                <DataGrid x:Name="ProductInformation" HorizontalAlignment="Left" Height="566" Margin="232,54,0,0" VerticalAlignment="Top" Width="1017" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding productId}" Width="25" />
                                        <DataGridTextColumn Header="Navn" Binding="{Binding productName}" Width="*"/>
                                        <DataGridTextColumn Header="Pris" Binding="{Binding productPrice}" Width="75"/>
                                        <DataGridTextColumn Header="Beskrivelse" Binding="{Binding productDescription}" Width="*"/>
                                        <DataGridTextColumn Header="Kategori" Binding="{Binding productCategory}" Width="120"/>
                                        <DataGridTextColumn Header="ImgPath" Binding="{Binding productImgPath}" Width="*"/>
                                        <DataGridTextColumn Header="TilbudsID" Binding="{Binding productSavingId}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Button x:Name="LoadDataIntoTextFields" Content="Indlæs" HorizontalAlignment="Left" Margin="109,324,0,0" VerticalAlignment="Top" Width="89" Click="LoadDataIntoTextFields_Click"/>
                                <TextBox x:Name="ProductId" HorizontalAlignment="Left" Height="23" Margin="10,17,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188"/>
                                <Button x:Name="DeleteButton" Content="Slet" HorizontalAlignment="Left" Height="20" Margin="10,349,0,0" VerticalAlignment="Top" Width="84" Click="DeleteButton_Click"/>
                                <Button x:Name="UpdateProductButton" Content="Opdater" HorizontalAlignment="Left" Height="19" Margin="109,350,0,0" VerticalAlignment="Top" Width="89" Click="UpdateProductButton_Click"/>
                                <Label x:Name="ProductNameLabel_Copy" Content="Lav en rabat" HorizontalAlignment="Left" Margin="1,374,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.179,-0.547" Height="26" Width="93"/>
                                <DatePicker x:Name="StartDate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,429,0,0" Width="119"/>
                                <Label x:Name="ProductNameLabel_Copy1" Content="Start dato" HorizontalAlignment="Left" Margin="8,398,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.179,-0.547" Height="26" Width="93"/>
                                <Label x:Name="ProductNameLabel_Copy2" Content="Start dato" HorizontalAlignment="Left" Margin="10,458,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.179,-0.547" Height="26" Width="93"/>
                                <DatePicker x:Name="EndDate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,489,0,0" Width="119"/>
                                <Label x:Name="Rabat" Content="Rabat i %" HorizontalAlignment="Left" Margin="10,518,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.179,-0.547" Height="26" Width="93"/>
                                <TextBox x:Name="Saving" HorizontalAlignment="Left" Margin="10,549,0,58" TextWrapping="Wrap" Text="" Width="188"/>
                                <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
                                <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
                                <Button x:Name="CreateRabat" Content="Opret Rabat" HorizontalAlignment="Left" Margin="123,577,0,33" Width="75" Click="CreateRabat_Click"/>
                                <Button x:Name="Clear" Content="Ryd felter" HorizontalAlignment="Left" Margin="109,374,0,0" VerticalAlignment="Top" Width="89" Click="Clear_Click"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="TabItem">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <local:ChainsTab />
            <TabItem>
                <local:ChainsTab />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
