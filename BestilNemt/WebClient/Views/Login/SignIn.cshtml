@using WebClient.BestilNemtServiceRef
@model Login
@{
    ViewBag.Title = "Sign in";
}

<div class="LogIn">
    <div class="col-md-12 text-center">
        <h3>Indtast dit brugernavn og adgangskode for at logge ind</h3>
    </div>
    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            @using (Html.BeginForm("Signdo", "Login", FormMethod.Get))
            {
            <section class="login-form">
                <form method="post" action="#">
                    <div class="form-group">
                        <h4>Indtast Email<br></h4>
                        <div class="EmailField">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                        <div class="form-group">
                            <br/><h4>Indtast Kodeord<br></h4>
                            <div class="PasswordField">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    <div class="form-group">
                        <div class="">
                            <input type="submit" value="Login" class="btn btn-default" />
                        </div>
                    </div>

                          
                           
                            <div>
                                <a onclick="location.href = '@Url.Action("CreateLogin", "Login")'">Opret konto</a> eller <a onclick="location.href = '@Url.Action("ResetLogin", "Login")'">Nulstil Adgangskode</a>
                            </div>
</form>
                <div class="form-links">
                    <a onclick="location.href = '@Url.Action("Index", "Home")'">www.BestilNemt.dk</a>
                </div>
            </section>
            }
        </div>

        <div class="col-md-4"></div>

    </div>
</div>