@using WebClient.BestilNemtServiceRef
@model Login
@Styles.Render("~/Content/css/de")
@{
    ViewBag.Title = "Sign in";
}

<div class="LogIn">
    <div class="col-md-12 text-center">
        <h3>Indtast dit brugernavn og adgangskode for at logge ind</h3>
    </div>
    @* A div to set the fields over each other in a row *@
    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            @* Create a form *@
            @using (Html.BeginForm("Signdo", "Login", FormMethod.Get))
            {
                <section class="login-form">
                    <form method="post" action="#">
                        <div class="form-group">
                            @* The Username field *@
                            <h4>Indtast Email<br></h4>
                            <div id="EmailField">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control test" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @* The Password field *@
                            <br /><h4>Indtast Kodeord<br></h4>
                            <div class="PasswordField">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control LoginTextAlignment" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @* A Login button *@
                        <div class="form-group">
                            <div class="">
                                <input type="submit" value="Login" class="btn btn-default" />
                            </div>
                        </div>

                        @* A link to Create a User with a login *@
                        <div>
                            <a onclick="location.href = '@Url.Action("CreateLogin", "Login")'">Opret konto</a>
                        </div>
                    </form>
                    @* A link to go to home *@
                    <div class="form-links">
                        <a onclick="location.href = '@Url.Action("Index", "Home")'">www.BestilNemt.dk</a>
                    </div>
                </section>
            }
        </div>
        <div class="col-md-4"></div>
    </div>
</div>